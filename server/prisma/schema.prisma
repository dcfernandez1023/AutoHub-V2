
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model User {
  id         String @id @default(uuid())
  email      String @unique
  password   String
  role       Role   @default(USER)
  registered Int @default(0)

  Vehicle Vehicle[]
}

model Vehicle {
  id            String   @id @default(uuid())
  userId        String
  name          String
  mileage       Int
  year          Int
  make          String
  model         String
  licensePlate  String
  vin           String
  notes         String
  dateCreated   BigInt
  sharedWith    String?
  base64Image   String?

  // Relation with User
  user          User     @relation(fields: [userId], references: [id])

  // Prevents updated to id and userId
  @@unique([id, userId])
}

enum Role {
  USER
  ADMIN
}
